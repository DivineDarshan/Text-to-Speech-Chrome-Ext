{
    "manifest_version": 2,
    "name": "Text to Speech Extension",
    "version": "1.0",
    "description": "Reads selected text aloud from any webpage with immediate stop on deselection",
    
    "permissions": [
        "activeTab",
        "tabs"
    ],
    
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },
    
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }]
}